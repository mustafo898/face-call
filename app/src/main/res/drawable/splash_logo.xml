<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background color -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" />
        </shape>
    </item>

    <!-- Circle drawable -->
    <item
        android:gravity="center">
        <shape android:shape="oval">
            <solid android:color="@android:color/transparent" /> <!-- Transparent circle -->
            <!-- You can adjust the size of the circle by modifying the size of the shape -->
            <size android:width="100dp" android:height="100dp" /> <!-- Adjust size as needed -->
        </shape>
    </item>

    <!-- Your drawable image -->
    <item
        android:drawable="@drawable/yiu"
        android:gravity="center" />
</layer-list>
